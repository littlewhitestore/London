
.page {
  height: 100%;
  font-family: '微软雅黑';
  background-color: #fff;
}

swiper-container {
  position: relative;
}

.swiper-container .swiper {
  height: 375rpx;
}

.swiper-container .swiper .img {
  width: 750rpx;
  height: 375rpx;
}

.swiper-container .dots {
  width: 200rpx;
  height: 40rpx;
  position: absolute;
  top: 336rpx;
  left: 275rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 6rpx;
  width: 20rpx;
  height: 20rpx;
  background: #979fa7;
  border-radius: 50%;
  transition: all 0.6s;
}

.swiper-container .dots .dot.active {
  background: #fe6e1f;
}
